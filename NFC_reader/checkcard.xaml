        <TextBlock HorizontalAlignment="Left" FontSize="50" Margin="312,400,0,0" TextWrapping="Wrap" Text="班級座號:" VerticalAlignment="Top"/>
        <TextBlock  x:Name="grade" HorizontalAlignment="Left" FontSize="50" Margin="528,400,0,0" TextWrapping="Wrap" Text="請刷卡" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" FontSize="50" Margin="412,470,0,0" TextWrapping="Wrap" Text="狀態:" VerticalAlignment="Top"/>
        <TextBlock  x:Name="state" HorizontalAlignment="Left" FontSize="50" Margin="528,470,0,0" TextWrapping="Wrap" Text="請刷卡" VerticalAlignment="Top"/>
        <TextBlock x:Name="message" HorizontalAlignment="Left" FontSize="35" Margin="423,540,0,0" TextWrapping="Wrap"  VerticalAlignment="Top"/>
    </Grid>
</Page>
